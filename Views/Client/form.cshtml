@{
    ViewBag.Title = "form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body>
    
  <form class="form-horizontal" role="form"  method="post"  action="/Client/CheckLogin">
  <div class="form-group">
    <span><label class="control-label col-sm-2" for="email">Email:</label></span>
    <div class="col-sm-10">
      <span><input type="email" class="textbox" name="Email" placeholder="Enter email" required></span>
    </div>
  </div>
  <div class="form-group">
    <span><label class="control-label col-sm-2" for="pwd">Password:</label></span>
    <div class="col-sm-10"> 
      <span><input type="password" class="textbox" name="Password" placeholder="Enter password" required></span>
    </div>
  </div>
  
  <div class="form-group"> 
    <div class="col-sm-offset-2 col-sm-10">
     <div>
                                    <span><input type="submit" value="Log in"></span>
                                </div>
  </div>
      <div ><h1>        Don't have Account then Sign up</h1></div>
      <div><a href="~/Client/LoginForm" class="btn btn-info" role="button">Sign Up</a>
                   
                </div>
      </div>
</form>


</body>
